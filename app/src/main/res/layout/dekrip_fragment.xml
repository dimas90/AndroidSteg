
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menubaru"
    tools:context="com.skripsi.androidsteg.DekripActivity$PlaceholderFragment" >


    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:fontFamily="sans-serif"
        android:text="File Decrypt"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_editor_absoluteY="28dp" />


    <TextView
        android:id="@+id/textViewfile"
        android:layout_width="53dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="134dp"
        android:text="File"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtBrowse"
        android:layout_width="177dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewfile"
        android:layout_alignParentStart="true"
        android:layout_marginStart="120dp"
        android:enabled="false"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:singleLine="true"
        android:textAlignment="textStart"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="99dp"
        tools:layout_editor_absoluteY="27dp" />

    <ImageButton
        android:id="@+id/btncari"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textViewfile"
        android:layout_marginEnd="33dp"
        android:layout_marginTop="-6dp"
        app:srcCompat="@drawable/cari"
        tools:layout_editor_absoluteX="300dp"
        tools:layout_editor_absoluteY="27dp" />


    <Button
        android:id="@+id/btndecode"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="122dp"
        android:background="@android:color/holo_blue_dark"
        android:ems="6"
        android:text="Decode"
        android:textColor="@android:color/black"
        android:textColorLink="@android:color/black"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="211dp" />

    <VideoView
        android:id="@+id/videoView3"
        android:layout_width="139dp"
        android:layout_height="102dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="192dp" />


</RelativeLayout>